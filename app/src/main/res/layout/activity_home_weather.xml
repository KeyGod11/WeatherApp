<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0800D5"
    tools:context=".HomeWeather">

    <Button
        android:id="@+id/weather_activity"
        android:layout_width="208dp"
        android:layout_height="80dp"
        android:layout_margin="0dp"
        android:text="Weather Activities"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.844"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="291dp"
        android:layout_height="263dp"
        app:layout_constraintBottom_toTopOf="@+id/weather_activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.501"
        app:srcCompat="@drawable/_102326_cloud_sun_sunny_weather_icon" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="178dp"
        android:layout_height="56dp"
        android:text="72 Degrees"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.276"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="41dp" />
</androidx.constraintlayout.widget.ConstraintLayout>